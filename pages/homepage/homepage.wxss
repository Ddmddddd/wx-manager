/* pages/homepage/homepage.wxss */
@import '../bp/bp.wxss';

view, scroll-view, swiper, swiper-item, icon, text, progress, button,
checkbox-group, checkbox, form, input, label, picker, radio-group, radio, slider,
switch, action-sheet, action-sheet-item, action-sheet-cancel, modal, toast,
loading, navigator, audio, image, video, map, canvas {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

:before, :after, ::before, ::after {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

.home-card-item {
  border-radius: 6px;
  background-color: white;
  box-shadow: rgba(0, 0, 0, 0.239216) 0px 1px 2px 0px;
  margin-bottom: 20px;
  margin-top: 8px;
  padding-bottom: 10px;
  width: 100%;
}

.tip-card-item {
  border-radius: 6px;
  margin-bottom: 10px;
  margin-top: 10px;
  width: 42%;
  height: 100px;
}

.nav-card-item {
  border-radius: 6px;
  box-shadow: rgba(0, 0, 0, 0.239216) 0px 2px 5px 0px;
  margin-bottom: 6px;
  margin-top: 6px;
  width: 90%;
  margin-left: 5%;
  height: 80px;
}

.paddinghalfrem {
  padding: 18.75rpx;
  padding-bottom: 18.75rpx;
}

.card-content {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.nav-relative {
  position: relative;
  left: 0px;
  top: -87px;
  z-index: 1;
}

.image-profile {
  width: 50px;
  height: 50px;
  border-radius: 50px;
  /* border-bottom-right-radius: 50px;
  border-bottom-left-radius: 50px;
  border-top-right-radius: 50px;
  border-top-left-radius: 50px; */
}

.image-nav {
  width: 50px;
  height: 50px;
}

.backimage-tip {
  border-radius: 6px;
  background-color: #57c98c;
  height: 100px;
  width: 100%;
}

.backimage-nav {
  border-radius: 3px;
  width: 100%;
  height: 80px;
}

.text-item {
  margin-left: 20px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.text-title {
  font-size: 21px;
}

.text-subtitle {
  font-size: 15px;
  color: gray;
}

.returnVisitDate {
  margin-right: 5%;
  font-size: 16pt;
  margin-top: 5px;
  color: white;
  font-weight: bold;
}

.PressureGoal {
  font-size: 20pt;
  color: white;
  font-weight: bold;
  margin-left: 10px;
}

.white {
  color: white;
}

.todo {
  font-size: 12pt;
  color: #a1a1a1;
  margin-left: 5%;
  margin-bottom: 10px;
  line-height: 10px;
}

/* grid style */

.nav-grids {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
}

.nav-grid-item {
  width: 33.3%;
  height: 100px;
  /* box-shadow: rgba(0, 0, 0, 0.239216) 0px 1px 2px 0px; */
  background-color: white;
  border: 1px whitesmoke solid;
}

.image-grid {
  width: 42px;
  height: 42px;
  border-radius: 3px;
}

.grid-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.text-item-grid {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  position: relative;
}

.red-icon {
  width: 25px;
  height: 25px;
  background: #f44;
  border-radius: 20px;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ddd;
  z-index: 10;
}

.icon {
  left: 80%;
  top: -20px;
}

