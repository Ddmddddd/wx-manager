/* pages/sports/sports.wxss */
@import '../bp/bp.wxss';
.circle-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10rpx;

}

.circle {
  position: absolute;
}

.circle-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60px;
}

.step {
  text-align: center;
  margin: 10rpx;
  font-size: 20px;
}

.step-text {
  font-size: 17px;
  margin-top: 50rpx;
}

.step-target {
  font-size: 12px;
  color: gray;
}
.history-type{
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.history-dur{
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.history-data {
  font-size: 20px;
  color: #188df0;
}

.history-unit {
  font-size: 16px;
  color: lightblue;
}
