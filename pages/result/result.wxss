/* pages/result/result.wxss */
.title{
  margin-top:5px; 
  display: flex;
  align-items: center;
  justify-content: center;
  color: #000000;
  font-size:20px;
}

.modetype{
  border-radius: 6px;
  flex-direction: column;
  margin-top: 8px;
  padding-bottom: 6px;
  width: 30%;
  margin-left: 2.5%;
}

.threemode{
  display: flex;
  flex-direction: row;
}

.modetitle{
  background-color: #336699;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size:35rpx;
}

.moderesult{
  background-color: #FFCC33;
  font-size:30rpx;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.lead{
  display:flex;
  justify-content:center;
  width:100%;
  height:150rpx;
}

.totaltitle{
  margin-top:5px; 
  font-size:25px;
  display: flex;
  justify-content: center;
}

.totalresult{
  background-color: rgb(231, 138, 7);
  font-size:50rpx;
  margin-top: 6px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.risktitle{
  margin-top: 15px;
  font-size: larger;
  color: #000000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.riskitem{
  color:#ff0033;
  font-size: large;
  margin-top: 5px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.advise{
  margin-top: 20px;
}