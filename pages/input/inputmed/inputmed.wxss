/* pages/input/inputmed/inputmed.wxss */

.delete {
  margin-left: 10px;
  margin-right: 10px;
}

.med-list {
  padding: 4px 6px 4px;
  margin-bottom: 10px;
}

.med-item {
  padding: 10px 10px;
  border-bottom: 1px solid #ddd;
}

.med-item-text {
  font-size: 18px;
}

.med-item-delete {
  color: dodgerblue;
  text-align: right;
  font-size: 12px;
}

.add-med-btn {
  color: dodgerblue;
  text-decoration: underline;
  font-size: 16px;
}

.med-add {
  display: flex;
  justify-content: space-around;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 40%;
  left: 0;

  background: #f9f9f9;
  margin: -200rpx 105rpx;
  border-radius: 36rpx;
  
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input-title {
  font-size: 36rpx;
  color: #030303;
  padding-left: 10rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}
