.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 40%;
  left: 0;

  background: #f9f9f9;
  margin: -200rpx 105rpx;
  border-radius: 36rpx;
  
}

.modal-title {
  padding-top: 50rpx;
  margin-bottom:10px; 
  color: #030303;
  text-align: center;
  font-size:larger;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 82rpx;
  font-size: 48rpx;
  line-height: 48rpx;
  padding: 0 20rpx;
