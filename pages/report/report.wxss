/* pages/report/report.wxss */
.report-item {
  background-color: rgb(255, 255, 255);
  border-bottom: 1px solid rgb(237, 237, 237);
  margin-bottom: 8px;
}

.circle {
  position: absolute;
}

.pie-charts {
  height: 150px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.circle-pie-charts {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.circle-sub {
  font-size: 13px;
}

.circle-score {
  font-size: 27px;
  font-weight: bold;
}

.circle-note {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.circle-note-text {
  margin-left: 20%;
  font-size: 16px;

}
.low{color:#1e90ff}.sta{color: #32cd32}.high{color:#ff4500}
.report-item-title {
  background-color: deepskyblue;
  height: 40px;
  display: flex;
  align-items: center;
}

.summary {
  display: flex;
  border-top: 1px solid gainsboro;
  justify-content: space-around;
  align-items: center;
  height: 70px;
}

.summary-item {
  border-right: 1px solid gainsboro;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-grow: 1;
  height: 70%;
}

.summary-item-title {
  border-radius: 3px;
 flex-grow: 1;
}

.summary-item-data {
  font-size: 16px;
  color: dimgray;
   flex-grow: 1;
}

.table {

}

.tr {
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid gainsboro;
}

.th {
  background-color: whitesmoke;
  flex-grow: 1;
  text-align: center;
}

.td {
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  width: 25%;
}

.td-data {
  font-size: 18px;
}

.td-time {
  font-size: 12px;
}

.rank {
  display: flex;
  width: 25%;
  margin-left: 40%;
  justify-content: space-around;
  align-items: center;
  height: 80px;
}
.pos{
  width: 30px;
  height: 30px;
}
.banner{
  width: 100%;
  height: 30px;
}
.bmi0{  margin-left: 5%;}.bmi1{  margin-left: 26%;}.bmi2{  margin-left: 47%;}.bmi3{  margin-left: 68%;}
.bmi4{  margin-left: 88%;}
.bmilables{
  display: flex;
  justify-content: space-around;
}