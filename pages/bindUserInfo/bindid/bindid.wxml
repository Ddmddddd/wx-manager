<!--pages/bindUserInfo/bindid/bindid.wxml-->
<view class='container'>

  <view class="weui-cells__title">身份证号码</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__bd">
        <input type='number' class='weui-input' placeholder='请输入身份证号码' value='{{new_id}}' bindinput='bindInputId' />
      </view>
    </view>
  </view>

  <button type='primary' class='bind-btn' bindtap='change'>确定</button>
</view>